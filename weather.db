import sqlite3

def save_to_db(df, db_path="weather.db"):
    # Connect (creates file if it doesn't exist)
    conn = sqlite3.connect(db_path)
    c = conn.cursor()

    # Create table if not exists
    c.execute('''
        CREATE TABLE IF NOT EXISTS weather_report (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            timestamp TEXT,
            temperature REAL,
            humidity REAL
        )
    ''')

    # Insert rows from DataFrame into table
    for _, row in df.iterrows():
        c.execute('''
            INSERT INTO weather_report (timestamp, temperature, humidity)
            VALUES (?, ?, ?)
        ''', (row["timestamp"], row["temperature_2m"], row["relative_humidity_2m"]))

    conn.commit()
    conn.close()
    print("âœ… Data saved into weather.db (table: weather_report)")
